<style lang="scss">
section {
	position: relative;
	padding-block: 72px;
	margin-bottom: 72px;

	&::before {
		content: '';
		background: #f7f7f7;
		position: absolute;
		top: 0;
		bottom: 0;
		width: 100vw;
		box-sizing: border-box;
		z-index: -1;
		transform: translateX(-50%);
		left: 50%;
	}
}

h2 {
	font-size: 32px;
	letter-spacing: -1.3px;
	margin-bottom: 30px;
}

.we__company {
	display: grid;
	grid-template-areas:
		"we-logo we-role"
		"we-logo we-period"
		"we-logo we-stack";
	grid-template-columns: 100px 1fr;
	font-family: var(--font-2);

	.we__logo {
		grid-area: we-logo;
	}
	.we__role {
		grid-area: we-role;
		font-weight: normal;
		font-size: 19px;
	}
	.we__period {
		grid-area: we-period;
		color: #777;
	}
	.we__stack {
		grid-area: we-stack;
	}

	&:not(:first-of-type) {
		margin-top: 30px;
	}
}
</style>
